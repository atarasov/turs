<form></form>

<% form_for @tender, :url => {:controller =>'tender', :action => 'create'} do |tender| %>
	<% if @tender.errors.present? && @tender.errors.any? %>
		<p style="color:red;"><%= @tender.errors.values.join("<br />").html_safe %></p>
	<% end %>
    <p><strong>Название* </strong><br/>
      <%= tender.text_field :name %>
    </p>

    <p><strong>Виды отдыха </strong><br/>
    <table>
      <tr>
        <td><%= tender.check_box :is_beach %> - <%= tender.label "Пляжный" %> </td>
        <td><%= tender.check_box :is_exotic %> - <%= tender.label "Экзотический" %> </td>
        <td><%= tender.check_box :is_therapeutic %> - <%= tender.label "Лечебно-оздоровительный" %> </td>
      </tr>
      <tr>
        <td><%= tender.check_box :is_ski %> - <%= tender.label "Горнолыжный" %></td>
        <td><%= tender.check_box :is_religious %> - <%= tender.label "Религиозный" %></td>
        <td><%= tender.check_box :is_business %> - <%= tender.label "Деловой" %></td>
      </tr>
      <tr>
        <td><%= tender.check_box :is_cruise %> - <%= tender.label "Круизный" %></td>
        <td><%= tender.check_box :is_extreme %> - <%= tender.label "Экстремальный" %></td>
        <td><%= tender.check_box :is_event %> - <%= tender.label "Событийный" %></td>
      </tr>
    </table>
    </p>


    <p><strong>Разделы каталога </strong><br/>
    <table>
      <tr>
        <td><%= tender.check_box :is_agent %> - <%= tender.label "Турагенства" %> </td>
        <td><%= tender.check_box :is_sanatorium %> - <%= tender.label "Санатории" %> </td>
        <td><%= tender.check_box :is_hotel %> - <%= tender.label "Отели" %> </td>
      </tr>
      <tr>
        <td><%= tender.check_box :is_tour_operator %> - <%= tender.label "Туроператоры" %></td>
        <td><%= tender.check_box :is_recreation_center %> - <%= tender.label "Базы отдыха" %></td>
        <td><%= tender.check_box :is_mini_hotel %> - <%= tender.label "Миниотели" %></td>
      </tr>
      <tr>
        <td><%= tender.check_box :is_guesthouse %> - <%= tender.label "Гостиницы" %></td>
        <td><%= tender.check_box :is_taxi %> - <%= tender.label "Такси" %></td>
        <td><%= tender.check_box :is_guide %> - <%= tender.label "Гиды" %></td>
      </tr>
    </table>
    </p>

    <p><strong>Страна </strong>(Выберите страну, которую хотели бы посетить)<br/>
	<%= tender.select :country_id, Country.all.collect {|p| [ p.title, p.id ] } %></p>


    <p><strong>Город </strong>(выберите свой город)<br/>
      <%= tender.select :city_id, City.all.collect {|p| [ p.name, p.id ] } %></p>
<br/>

    <p><strong>Дата начала отдыха* </strong><br/>
      <%= tender.text_field :start_date, :readonly => "readonly" %></p>
<br/>

    <p><strong>Бюджет* </strong><br/> <%= tender.number_field :budget %></p>

    <p><strong>Описание* </strong><br/> <%= tender.text_area :description, :cols => 50, :rows => 10 %></p>

    <p><%= tender.check_box :turs %> - <%= tender.label "Предлагать экскурсии" %>
    </p>

    <p><strong>Контактный телефон </strong><br/>
	  <%= tender.text_field :contact_phone %></p>
    <p><strong>Контактный e-mail </strong><br/>
	  <%= tender.text_field :contact_email %></p>
    <p><strong>Контактный icq </strong><br/>
	  <%= tender.text_field :contact_icq %></p>
    <p><strong>Контактный skype </strong><br/>
	  <%= tender.text_field :contact_skype %></p>

    <p><%= tender.submit "Сохранить" %></p>
<% end %>

<script type="text/javascript">
  $("document").ready(function(){
	  $("#tender_start_date").datepicker();
  });
</script>