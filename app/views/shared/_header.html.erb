
<div id="header">
<form class="select" action="">
  <fieldset>
    <div class="row">
      <div class="sub-row">
        <%#= button_to "", login_url(:subdomain => false), :class=>"btn-login" %>
        <%#= button_to "", new_user_url(:subdomain => false), :class=>"btn-register" %>
        <%# raise @current_user.inspect %>
        <!--<a href="" class="btn-slide">Нажми на меня!</a>-->
        <input onclick="window.location = '<%= signup_url %>';" class="btn-register" value=""/>
        <% if current_user.present? %> <%= link_to 'Мои действия', company_profile_url(current_user), :class=>"btn-slide" %>
            <div id="panel">
              <a href="" style="float: right;text-decoration:none; background-color: #ffffff;" class="btn-slide active">X</a>

              <ul>

                <li><b>Фото:</b> <span> (<%= current_user.photos.all.count %>)</span><em>&nbsp;</em> <%= link_to_unless_current 'добавить', company_photos_url(current_user) %> / <%= link_to_unless_current 'Редактировать', company_photos_url(current_user) %>
                 </li>
                <li><b>Видео:</b> <span> (<%= current_user.videos.all.count %>)</span><em>&nbsp;</em><%= link_to_unless_current 'добавить', company_videos_url(current_user) %> / <%= link_to_unless_current 'Редактировать', company_videos_url(current_user) %>
                  </li>
                <li><b>Статьи:</b> <%= link_to t(:add), new_journal_url %> / мои рекомендовано (0)</li>
                <li><b>Заявки на услуги:</b> участвую</li>
                <li><b>Форум:</b> Создать новую тему на форуме / мои темы на форуме</li>
                <li><%= link_to_unless_current 'Отзывы', company_comments_url(current_user) %>
                  </li>

                <li><%= link_to t(:add_journal), new_journal_url %></li>

              </ul>
              <ul>
                <li><b><%= t(:pro_service)%>:</b> (<%= link_to t(:popr), paid_service_pro_url %>)</li>
                <li><b><%= t(:recommended_service) %>:</b> (<%= link_to t(:popr), paid_service_recommended_url %>)</li>
                <li><b><%= t(:vip_service)%>:</b> (<%= link_to t(:popr), paid_service_vip_url %>)</li>
                <li><b><%= t(:adv_turs)%>:</b> <span> (<%= current_user.comments.recent.all.count %>)</span><em>&nbsp;</em> <%= link_to_unless_current t(:add), new_tur_url() %> / <%= link_to_unless_current t(:my_turs), turs_url(:user_id => current_user.id) %></li>
                <li><b><%= t(:selection_service) %>:</b> (<%= link_to t(:popr), paid_service_selection_url %>)</li>
                <li><b><%= t(:advertisements)%>:</b> <%= link_to t(:add), new_advertisement_url %> / <%= link_to t(:my_adv), advertisements_url(:user_id => current_user.id) %></li>
                <li><b><%= t(:journsl_service) %>:</b> (<%= link_to t(:popr), paid_service_advertising_in_journal_url %>)</li>
                <li><b><%= t(:in_site_service) %>:</b> (<%= link_to t(:popr), paid_service_advertising_in_site_url %>)</li>
                <li><b><%= t(:link_service) %>:</b> t(:add) / (<%= link_to t(:popr), paid_service_site_link_url %>)</li>
              </ul>
              <ul>
                <li><%= link_to 'В профиль', company_profile_url(current_user) %></li>
                <li>Статистика</li>
                <li><%= link_to t(:add), new_company_profile_reward_url(current_user)%> / <%= link_to t(:all), company_profile_rewards_url(current_user)%></li>
                <li><b>Профиль:</b> <%= link_to t(:change_data), edit_company_profile_url(current_user) %>  / <%= link_to t(:change_password), edit_user_url(current_user) %> / <%= link_to 'Выйти', logout_url %></li>
              </ul>
            </div>

        <% else %>
            <input class="btn-login" value=""/>

            <div id="panel2">
              <a href="" style="float: right;text-decoration:none; background-color: #ffffff;" class="btn-login active">X</a>

              <h2><%= I18n.t('txt.login', :default => 'Login') %></h2>
<form action="#" method="post">  </form>
              <%= form_tag session_path, :method => :post do %>
                  <div id="openid_fields" style="display:none">
                    <p>
                      <label for="openid_url"><%= I18n.t "txt.views_users.login_with_openid", :default => "Login with OpenID" %></label>
                      <br/>
                      <%= text_field_tag 'openid_url', params[:openid_url], :class => "openid_url" %>
                    </p>

                    <p>or login with <a href="#" onclick="LoginForm.setToPassword()">username/password</a></p>
                  </div>

                  <div id="password_fields">
                    <p><%= label_tag I18n.t('txt.login_name', :default => 'Login') %><br/>
                      <%= text_field_tag 'login', @login %></p>

                    <p><%= label_tag I18n.t('txt.password', :default => 'Password') %><br/>
                      <%= password_field_tag 'password', nil %></p>

                    <p><%= label_tag 'remember_me', I18n.t('txt.remember_me', :default => 'Remember me') %>
                      <%= check_box_tag 'remember_me', '1', @remember_me %></p>

                    <p><%= submit_tag I18n.t('txt.log_in', :default => 'Log in') %>
                      <%= link_to_function(I18n.t('txt.views_users.reset_password', :default => "reset password"), "$('reset-password').toggle();") %>
                      <!--<a href="#" onclick="LoginForm.setToOpenID()"><%#= I18n.t('txt.or_login_with_openid', :default => 'or login with OpenID') %></a>-->
                    </p>
                  </div>

              <% end %>

              <%= form_tag users_path, :id => 'reset-password', :style => 'display:none' do %>

                  <hr/>
                  <h5><%= I18n.t 'txt.views_users.reset_password', :default => "Reset Password" %></h5>

                  <p><%= I18n.t 'txt.views_users.email_directions' %></p>

                  <p><%= text_field_tag :email, "", :size => 30 %></p>

                  <p><%= submit_tag I18n.t("txt.views_users.send_email", :default => "E-mail me the link") %>
                    or <%= link_to_function(I18n.t("txt.cancel", :default => "cancel"), "$('reset-password').hide()") %></p>

              <% end %>

              <%#= javascript_tag "$('openid_input').focus();" %>
            </div>

        <% end %>

      </div>

      <label for="id1">Все города:</label>
      <select id="id1">
        <option>город</option>
        <option>город</option>
        <option>город</option>
      </select>
      <% form_tag '' do %>
          <label for="id2"><%= t(:selectLang) %>:</label>
          <%= select_tag("id2", options_for_select([['...', '0']] + LOCALES_AVAILABLE, I18n.locale), {:index => nil}) %>
          <!--, :onchange => 'this.form.submit()'-->
      <% end %>
    </div>
  </fieldset>
</form>

<script type="text/javascript">
    $(document).ready(function() {
        $(".btn-slide").click(function() {
            $("#panel").slideToggle("fast");
            $(this).toggleClass("active");
            return false;
        });

        $(".btn-login").click(function() {
            $("#panel2").slideToggle("fast");
            $(this).toggleClass("active");
            return false;
        });
    });
</script>


