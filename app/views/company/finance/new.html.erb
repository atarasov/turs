
<div id="popolnenie">
  <img src="/images/balans_pop.png" >
  <ul>
  <%= form_for @balance, :url => url_for({:controller => :finance, :action => :create}) do |form| %>

		<li>	Пополнить баланс на сумму</li>
<li>
		  <% if @balance.sum > 0 %>
		  	<%= form.hidden_field :sum %>
			<%= @balance.sum %>
		  <% else %>
		    <%= form.text_field :sum %>
		  <% end %>
		  руб</li>

	<li><%= form.submit "Продолжить" %></li>
<% end %>
      </ul>
</div>
