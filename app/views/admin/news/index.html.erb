<h1>Новости</h1>

<table>
  <tr>
    <th></th>
    <th>Заголовок</th>
    <th>Описание</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= image_tag news.image.url(:small) %></td>
    <td><%= news.title %></td>
    <td><%= news.description %></td>
    <td><%= link_to 'Посмотреть', admin_news_url(news) %></td>
    <td><%= link_to 'Редактировать', edit_admin_news_path(news) %></td>
    <td><%= link_to 'Удалить', admin_news_url(news), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

