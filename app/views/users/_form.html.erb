<% form_for @user do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :login %><br/>
      <%= f.text_field :login %>
    </p>
    <p>
      <%= f.label t(:email) %><br/>
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label t(:password) %><br/>
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.label t(:password_confirmation) %><br/>
      <%= f.password_field :password_confirmation %>
    </p>
    <p>
      <%= f.label t(:role) %><br/>
      <%= select :user, :roles, User::ROLE_ARR %>
    </p>

    <p><%= f.submit %></p>
<% end %>
