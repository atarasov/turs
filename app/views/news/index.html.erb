<h1>Listing news</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Description</th>
    <th></th>

  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= image_tag news.image.url(:small) %></td>
    <td><%= news.title %></td>
    <td><%= news.description %></td>
    <td><%= link_to 'Show', news %></td>

  </tr>
<% end %>
</table>

